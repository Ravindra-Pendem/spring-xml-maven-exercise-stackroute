<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="
        http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <!-- bean definitions here -->

    <bean id="actor" class="com.stackroute.domain.Actor">
        <constructor-arg name="name" value="Diljit Dosanjh"></constructor-arg>
        <constructor-arg name="gender" value="male"></constructor-arg>
        <constructor-arg name="age" value="35"></constructor-arg>
    </bean>

    <bean id="actress" class="com.stackroute.domain.Actor">
        <constructor-arg value="Sargun Mehta"></constructor-arg>
        <constructor-arg name="gender" value="female"></constructor-arg>
        <constructor-arg name="age" value="30"></constructor-arg>
    </bean>

    <bean id="sidekick" class="com.stackroute.domain.Actor">
        <constructor-arg name="name" value="Harby Sangha"></constructor-arg>
        <constructor-arg name="gender" value="male"></constructor-arg>
        <constructor-arg name="age" value="45"></constructor-arg>
    </bean>

